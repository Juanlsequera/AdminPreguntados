@model ProyectoG.ViewModel.JugadoresSalonesView
@{
    ViewBag.Title = "EditarSalon";
}

<h2>Agregar jugadores a salones</h2>
<h3>@ViewBag.Error</h3>

@using (Html.BeginForm("EditarSalon", "JugadoresSalones", FormMethod.Post, new { @id = "frmEjecucion", @name = "frmEjecucion", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Jugador.Id)

    @Html.ActionLink("Agregar Jugador", "AgregarJugadorEdit", new { }, new { @class = "btn btn-success" })
    <input type="submit" value="Finalizar" id="EditarSalon" class="btn btn-success" />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => Model.Jugador.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => Model.Jugador.Nombres)
            </th>

        </tr>
        @for (int i = 0; i < Model.Jugadores.Count; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.Jugadores[i].Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Jugadores[i].FullName)
                </td>

                <td>
                    @Html.ActionLink("Eliminar", "EliminarEdit", new { id = Model.Jugadores[i].Id })
                </td>
            </tr>
        }
    </table>
}


