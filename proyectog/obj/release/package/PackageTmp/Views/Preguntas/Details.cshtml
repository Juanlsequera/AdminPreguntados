@model ProyectoG.ViewModel.PreguntasRespuestasView


@{
    ViewBag.Title = "Details";
}

<h2>Detalles</h2>

<div>
    <h4>Pregunta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Preguntas.tbl_Categorias.Categoria)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Preguntas.tbl_Categorias.Categoria)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Preguntas.tbl_Niveles.Nivel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Preguntas.tbl_Niveles.Nivel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Preguntas.Pregunta)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Preguntas.Pregunta)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Preguntas.Link)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Preguntas.Link)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Preguntas.Privada)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Preguntas.Privada)
        </dd>

    </dl>
    <hr />
    <table class="table">
        <tr>
            <th>
              Respuesta
            </th>
            <th>
              Respuesta Correcta
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Respuestas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Respuesta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Respuesta_Correcta)
                </td>
            </tr>
        }

    </table>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Preguntas.Id }) |
    @Html.ActionLink("Volver a la lista", "Index")
</p>
