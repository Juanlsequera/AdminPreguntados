@model ProyectoG.Models.tbl_Jugadores
@{
    ViewBag.Title = "AgregarJugador";
}

<h2>@ViewBag.Error</h2>

@using (Html.BeginForm("AgregarJugadorEdit", "JugadoresSalones", FormMethod.Post, new { @id = "frmEjecucion", @name = "frmEjecucion", @enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-5">
            @Html.LabelFor(model => model.Nombres, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="col-md-10">
            @Html.DropDownList("Id", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <input type="submit" value="Agregar" id="AgregarJugador" class="btn btn-success" />
}

